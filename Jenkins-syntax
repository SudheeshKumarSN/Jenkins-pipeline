pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/jitpack/maven-simple'
                echo 'Hi, welcome to Jenkins...'
            }
        }
        stage('Build') {
            steps {
                sh 'ls -ltr'
                echo 'Build completed successfully'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deployment completed successfully...'
            }
        }
    }
}