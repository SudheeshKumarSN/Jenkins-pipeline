pipeline {
    agent any
    tools {
        maven 'maven_3.9.8'
    }
    stages {
        stage('SCM Checkout') {
            steps {
                echo "Running on node: ${env.NODE_NAME}"
                git branch: 'main', url: 'https://github.com/ElevenDevOps/eleven-devops-maven-repo.git'
                sh 'ls -ltr'
            }
        }
        stage('Compilation') {
            steps {
                echo "Running on node: ${env.NODE_NAME}"
                sh '''
            
                mvn compile
                '''
            }
        }
        stage('Test') {
            steps {
                echo "Running on node: ${env.NODE_NAME}"
                sh '''
        
                mvn test
                '''
            }
        }
        stage('integration-test'){
            steps{
                echo "Running on node: ${env.NODE_NAME}"
                sh 'mvn integration-test'
            }
        }
    }
}
